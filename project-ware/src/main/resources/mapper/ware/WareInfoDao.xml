<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wwd.modules.ware.dao.WareInfoDao">

    <resultMap type="com.wwd.modules.ware.entity.WareInfoEntity" id="wareInfoMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="areacode" column="areacode"/>
    </resultMap>

    <update id="orderLockStock">
        update wms_ware_sku set stock_locked = stock_locked + #{num} where sku_id = #{skuId} and ware_id = #{wareId} and stock - stock_locked > #{num}
    </update>

</mapper>